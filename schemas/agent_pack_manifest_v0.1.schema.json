{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Agent Pack Manifest v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "spec_version",
    "name",
    "version",
    "created_at",
    "publisher",
    "type",
    "files",
    "entrypoints"
  ],
  "properties": {
    "spec_version": {
      "type": "string",
      "const": "0.1"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string"
    },
    "publisher": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": ["workflow_pack", "tool_pack", "mixed"]
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "sha256"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    },
    "entrypoints": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "signature": {
      "type": "string"
    }
  }
}
